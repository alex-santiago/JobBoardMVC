@model JobPostsListViewModel


@Html.Partial("JobPostSearchBasic")
@{
    Layout = "_AdminLayout";
}

<div class="row mb-3">
    @foreach (var jp in Model.JobPosts)
    {
        <div class="col-sm-12 col-md-6">
            <div class="card mb-3">
                <div class="card-header">
                    <h3 class="card-title">@jp.Title</h3>
                </div>
                <div class="card-body">
                    <p class="card-text">@jp.PostDate.ToString("MMM/dd/yyyy")</p>
                    <p class="card-text">@jp.City</p>
                    <p class="card-text">@jp.Description</p>
                </div>
                <div class="card-footer ">
                    <form asp-controller="Admin" asp-action="Delete" method="post">
                        <div class="pull-right">
                            <a asp-controller="Admin" asp-action="Edit" asp-route-jobPostID="@jp.JobPostID" class="btn btn-primary">Edit</a>
                            <input type="hidden" name="JobPostID" value="@jp.JobPostID" />
                            <button type="submit" class="btn btn-primary">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
<div class="row pull-right">
    <div class="col-sm-12">
        <div page-model="@Model.PagingInfo" page-action="List"
             page-classes-enabled="true"
             page-class="btn" page-class-normal="btn-secondary"
             page-class-selected="btn-primary" class="btn-group">
        </div>
    </div>
</div>

