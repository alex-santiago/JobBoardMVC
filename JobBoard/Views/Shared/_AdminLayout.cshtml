<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Job Board</title>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

    <link href="~/vendor/bootstrap/4.0.0/bootstrap.css" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet">
</head>
<body>
    <div id="wrapper" class="">
        <!-- Navigation -->
        <header class="navbar bg-white navbar-static-top">
          <a class="navbar-brand navbar-btn mr-0 mr-md-2" asp-controller="Home" asp-action="Index">Job Miner</a>
          <div class="">
            <ul class="nav nav-pills navbar-btn navbar-nav navbar-left">
              <li class="nav-item">
                <a class="nav-link" href="#">My Posts</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="Create">Post Job</a>
              </li>
              <li class="nav-item">
                <a href="#"><i class="fa fa-user fa-fw "></i> User Profile</a>
              </li>
            </ul>
          </div>
        </header>
        <div id="page-wrapper">
            <!-- /.row -->
            @if (TempData["message"] != null)
            {
                <div class="row mt-3 mb-3">
                    <div class="col-lg-12">
                        <div class="alert-success p-3">@TempData["message"]</div>
                    </div>
                </div>
            }
            <div class="row">
                <div class="col-lg-12">
                    @RenderBody()
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <script src="~/vendor/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/vendor/bootstrap/4.0.0/bootstrap.bundle.min.js"></script>
</body>
</html>
