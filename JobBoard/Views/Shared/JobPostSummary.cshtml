@model JobPost

<div class="card mb-3">
    <div class="card-header">
        <h3 class="card-title">@Model.Title</h3>
        <h4 class="card-title">@Model.Company?.name</h4>
    </div>
    <div class="card-body">
        <input type="hidden" name="JobPostID" value="@Model.JobPostID" />
        <p class="card-text">@Model.PostDate.ToString("MMM/dd/yyyy")</p>
        <p class="card-text">@Model.City</p>
        <p class="card-text">@Model.Description</p>
    </div>
    <div class="card-footer ">
        <div class="pull-right">
            <a asp-controller="JobPost" asp-action="View" asp-route-jobPostID="@Model.JobPostID" class="btn btn-primary">View</a>
        </div>
    </div>
</div>
